<input @ref="InputReference" class="form-control" style="width: 45px; text-align: center;" type="text" maxlength="1"
    @onkeydown="(e) => OnKeydown(e, Index)" @oninput="(e) => OnInputNext(e, Index)" />

@code {
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public ElementReference InputReference { get; set; }

    [Parameter]
    public Func<KeyboardEventArgs, int, Task> OnKeydown { get; set; }

    [Parameter]
    public Func<ChangeEventArgs, int, Task> OnInputNext { get; set; }
}