@page "/words"
@rendermode InteractiveServer

<PageTitle>Words</PageTitle>

<div class="row">
  <form @onsubmit=Enter class="col-xl-3 col-md-6 col-sm-6 mb-3">
    <input type="text" class="form-control" placeholder="search" @bind-value=newWord @bind-value:event="oninput" />
  </form>
  <div class="d-flex col-xl-9 col-md-6 col-sm-6 mb-3 word-actions">
    <div class="me-3">
      <NavLink class="btn btn-success align-items-center fs-sm-1" href="words/add">
        <i class="bi bi-plus-circle-fill"></i>
        Add
      </NavLink>
    </div>
    <div>
      <NavLink class="btn btn-primary align-items-center fs-sm-1" href="words/guess">
        <i class="bi bi-play-circle-fill"></i>
        Guess
      </NavLink>
    </div>
  </div>
</div>

<div class="row g-3">
  @foreach (var item in words)
  {
    <div class="col-xl-3 col-md-6 mb-sm-0">
      <div class="card h-100">
        <img src="@item.ImageUrl" class="card-img-top mb-3 object-fit-cover h-50 min-h-25" />
        <div class="card-body">
          <h5 class="card-title">@item.Word</h5>
          <p class="card-text">@item.Description</p>
        </div>
        <div class="card-footer">
          Card footer
        </div>
      </div>
    </div>
  }

</div>



